<!--
    Usage:
    
    The following public identifier can be used to identify it:

     "-//Error Parser project//DTD Error Parser XML V1.0//EN"

    The full DOCTYPE declaration should look like this:
    
    <!DOCTYPE errorlist PUBLIC "-//Error Parser project//DTD Error Parser XML V1.0//EN"
                 "http://errorparser.sourceforge.net/xml/1.0/errorParser.dtd">
-->

<!ELEMENT errorlist     (copyright?,enumname?,prefix,group+)>
<!ELEMENT copyright     (years,authors,notice+)>
<!ELEMENT years         (#PCDATA)>
<!ELEMENT authors       (#PCDATA)>
<!ELEMENT notice        (#PCDATA)>
<!ELEMENT enumname      (#PCDATA)>
<!ELEMENT prefix        (#PCDATA)>
<!ELEMENT group         (groupident?,error+)>
<!ELEMENT groupident    (#PCDATA)>
<!ELEMENT error         (number,name,messages)>
<!ELEMENT number        (#PCDATA)>
<!ELEMENT name          (#PCDATA)>
<!ELEMENT messages      (errormsg+,documentation*)>
<!ELEMENT errormsg      (#PCDATA)>
<!ELEMENT documentation (paragraph+)>
<!ELEMENT paragraph     (#PCDATA)>

<!ATTLIST errorlist version CDATA #REQUIRED>
<!ATTLIST documentation  xml:lang CDATA 'en'>
<!ATTLIST errormsg   xml:lang CDATA 'en'>
<!ATTLIST groupident xml:lang CDATA 'en'>

